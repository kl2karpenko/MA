<?xml version='1.0' encoding='utf-8'?>
<!-- com.kwebbl.androidapp || kwebblMobileApp -->
<widget id="kwebbl" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kwebbl</name>
    <description>
        Kwebbl mobile app for company/users changing dialplans state
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>

        <splash src="res/main.png" density="port-hdpi"/>
        <splash src="res/main.png" density="port-mdpi"/>
        <splash src="res/main.png" density="port-xhdpi"/>
        <splash src="res/main.png" density="port-hdpi"/>

        <icon src="res/favicon.png" density="ldpi" />
        <icon src="res/favicon.png" density="mdpi" />
        <icon src="res/favicon.png" density="hdpi" />
        <icon src="res/favicon.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>

        <splash src="res/main.png" width="320" height="480"/>
        <splash src="res/main.png" width="640" height="960"/>

        <icon src="res/favicon.png" width="60" height="60"/>
        <icon src="res/favicon.png" width="120" height="120"/>
        <icon src="res/favicon.png" width="152" height="152"/>
        <icon src="res/favicon.png" width="180" height="180"/>
    </platform>
    <preference name="SplashScreen" value="screen"/>
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="SplashScreenDelay" value="5000"/>
    <preference name="ShowSplashScreenSpinner" value="false" />

    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen"/>
        <param name="ios-package" value="CDVSplashScreen" />
        <param name="onload" value="true"/>
    </feature>

    <feature name="Contacts">
        <param name="ios-package" value="CDVContacts" />
    </feature>

    <preference name="orientation" value="portrait"/>
</widget>
