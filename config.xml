<?xml version='1.0' encoding='utf-8'?>
<widget id="com.digifoon.qaller" version="0.0.3"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Qaller</name>
    <description>
        Kwebbl mobile app for company/users changing dialplans state
    </description>
    <author email="info@digifoon.nl" href="http://qallerapp.com">
        Digifoon Group BV
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="android-build-tool" value="gradle" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-ldpi" src="res/screen/android/200x320.png" />
        <splash density="port-mdpi" src="res/screen/android/320x480.png" />
        <splash density="port-hdpi" src="res/screen/android/480x800.png" />
        <splash density="port-xhdpi" src="res/screen/android/720x1280.png" />
        <splash density="port-xxhdpi" src="res/screen/android/960x1600.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/1080x1920.png" />
        <icon density="ldpi" src="res/android/48.png" />
        <icon density="mdpi" src="res/android/72.png" />
        <icon density="hdpi" gap:role="default" src="res/android/96.png" />
        <icon density="xhdpi" src="res/android/144.png" />
    </platform>
    <platform name="ios">
        <preference name="target-device" value="handset" />
        <preference name="deployment-target" value="8.0" />
        <preference name="AppendUserAgent" value="Qaller" />
        <preference name="SuppressesLongPressGesture" value="true" />
        <preference name="Suppresses3DTouchGesture" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash height="480" src="res/screen/ios/Iphone 320x480.png" width="320" />
        <splash height="1242" src="res/screen/ios/iPhone 6 Plus Landscape.png" width="2208" />
        <splash height="1536" src="res/screen/ios/iPad Landscape.png" width="2048" />
        <splash height="768" src="res/screen/ios/iPad Mini Landscape.png" width="1024" />
        <splash height="2048" src="res/screen/ios/Ipad.png" width="1536" />
        <splash height="1024" src="res/screen/ios/iPad Mini.png" width="768" />
        <splash height="960" src="res/screen/ios/Iphone 4.png" width="640" />
        <splash height="1136" src="res/screen/ios/Iphone 5.png" width="640" />
        <splash height="1334" src="res/screen/ios/Iphone 6.png" width="750" />
        <splash height="2208" src="res/screen/ios/Iphone 6 Plus.png" width="1242" />
        <splash height="2208" src="res/screen/ios/Default@3x~universal.png" width="1242" />
        <icon height="180" src="res/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/icon-60.png" width="60" />
        <icon height="120" src="res/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="152" src="res/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="res/ios/icon-Small-40.png" width="40" />
        <icon height="80" src="res/ios/icon-Small-40@2x.png" width="80" />
        <icon height="57" src="res/ios/icon.png" width="57" />
        <icon height="114" src="res/ios/icon@2x.png" width="114" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="144" src="res/ios/icon-72@2x.png" width="144" />
        <icon height="29" src="res/ios/icon-Small.png" width="29" />
        <icon height="58" src="res/ios/icon-Small@2x.png" width="58" />
        <icon height="87" src="res/ios/icon-Small@3x.png" width="87" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
        <icon height="100" src="res/ios/icon-50@2x.png" width="100" />
        <icon height="167" src="res/ios/icon-83.5@2x.png" width="167" />
    </platform>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="ios-package" value="CDVSplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <feature name="Contacts">
        <param name="ios-package" value="CDVContacts" />
    </feature>
    <plugin name="cordova-plugin-sim" spec="~1.2.1" />
    <plugin name="cordova-plugin-keyboard" spec="~1.1.4" />
    <plugin name="cordova-plugin-compat" spec="~1.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    <plugin name="cordova-plugin-network-information" spec="~1.2.1" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.1" />
    <plugin name="cordova.plugins.diagnostic" spec="~3.1.1" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.3" />
    <plugin name="cordova-plugin-ios-launch-screen" spec="https://github.com/kerrishotts/cordova-plugin-ios-launch-screen" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2" />
    <plugin name="com.dbaq.cordova.contactsPhoneNumbers" spec="~0.0.8" />
</widget>
